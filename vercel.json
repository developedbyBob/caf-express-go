{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/server.js"
    },
    {
      "src": "/(assets|css|js)/(.*)",
      "dest": "/public/$1/$2"
    },
    {
      "src": "/(.*\\.(ico|png|jpg|jpeg|svg|webp|css|js|woff|woff2|ttf|otf))",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}